<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Colors -->
    <Color x:Key="ThemePrimaryColor">#2C3E50</Color>
    <Color x:Key="ThemeAccentColor">#3498DB</Color>
    <Color x:Key="ThemeSuccessColor">#27AE60</Color>
    <Color x:Key="ThemeWarningColor">#F39C12</Color>
    <Color x:Key="ThemeDangerColor">#E74C3C</Color>
    <Color x:Key="ThemeBackgroundColor">#ECF0F1</Color>
    <Color x:Key="ThemeCardBackgroundColor">#FFFFFF</Color>
    <Color x:Key="ThemeTextColor">#2C3E50</Color>
    <Color x:Key="ThemeSecondaryTextColor">#7F8C8D</Color>
    <Color x:Key="ThemeBorderColor">#BDC3C7</Color>
    <Color x:Key="ThemeInputBackgroundColor">#FFFFFF</Color>
    <Color x:Key="ThemeHeaderTextColor">#FFFFFF</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="ThemePrimaryBrush" Color="{StaticResource ThemePrimaryColor}"/>
    <SolidColorBrush x:Key="ThemeAccentBrush" Color="{StaticResource ThemeAccentColor}"/>
    <SolidColorBrush x:Key="ThemeSuccessBrush" Color="{StaticResource ThemeSuccessColor}"/>
    <SolidColorBrush x:Key="ThemeWarningBrush" Color="{StaticResource ThemeWarningColor}"/>
    <SolidColorBrush x:Key="ThemeDangerBrush" Color="{StaticResource ThemeDangerColor}"/>
    <SolidColorBrush x:Key="ThemeBackgroundBrush" Color="{StaticResource ThemeBackgroundColor}"/>
    <SolidColorBrush x:Key="ThemeCardBackgroundBrush" Color="{StaticResource ThemeCardBackgroundColor}"/>
    <SolidColorBrush x:Key="ThemeTextBrush" Color="{StaticResource ThemeTextColor}"/>
    <SolidColorBrush x:Key="ThemeSecondaryTextBrush" Color="{StaticResource ThemeSecondaryTextColor}"/>
    <SolidColorBrush x:Key="ThemeBorderBrush" Color="{StaticResource ThemeBorderColor}"/>
    <SolidColorBrush x:Key="ThemeInputBackgroundBrush" Color="{StaticResource ThemeInputBackgroundColor}"/>
    <SolidColorBrush x:Key="ThemeHeaderTextBrush" Color="{StaticResource ThemeHeaderTextColor}"/>

    <!-- Accent Hover Colors -->
    <Color x:Key="ThemeAccentHoverColor">#2980B9</Color>
    <Color x:Key="ThemeSuccessHoverColor">#229954</Color>
    <Color x:Key="ThemeDangerHoverColor">#C0392B</Color>

</ResourceDictionary>
