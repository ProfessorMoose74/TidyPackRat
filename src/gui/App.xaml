<Application x:Class="TidyPackRat.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Default to Light Theme -->
                <ResourceDictionary Source="Themes/LightTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Legacy Color Aliases for backward compatibility -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource ThemePrimaryColor}"/>
            <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource ThemeAccentColor}"/>
            <SolidColorBrush x:Key="SuccessBrush" Color="{DynamicResource ThemeSuccessColor}"/>
            <SolidColorBrush x:Key="WarningBrush" Color="{DynamicResource ThemeWarningColor}"/>
            <SolidColorBrush x:Key="DangerBrush" Color="{DynamicResource ThemeDangerColor}"/>
            <SolidColorBrush x:Key="BackgroundBrush" Color="{DynamicResource ThemeBackgroundColor}"/>

            <!-- Button Styles -->
            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="Background" Value="{DynamicResource ThemeAccentBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="15,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background">
                            <Setter.Value>
                                <SolidColorBrush Color="{DynamicResource ThemeAccentHoverColor}"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Background" Value="#95A5A6"/>
                        <Setter Property="Foreground" Value="#666666"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                <Setter Property="Background" Value="{DynamicResource ThemeSuccessBrush}"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background">
                            <Setter.Value>
                                <SolidColorBrush Color="{DynamicResource ThemeSuccessHoverColor}"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                <Setter Property="Background" Value="{DynamicResource ThemeDangerBrush}"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background">
                            <Setter.Value>
                                <SolidColorBrush Color="{DynamicResource ThemeDangerHoverColor}"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
